<% content_for :title, "Subscriptions" %>

<h1>Subscriptions</h1>

<div id="subscriptions">
  <% @subscriptions.each do |subscription| %>
    <%= render subscription %>
    <p>
      <%= link_to "Show this subscription", subscription %>
    </p>
  <% end %>
</div>

<% if user_signed_in? && current_user.client? && (!current_user.subscription || current_user.subscription.status != 'active') %>
